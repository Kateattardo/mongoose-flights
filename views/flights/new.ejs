<head>
    <%- include('../partials/header') %>
        <title>Flights App</title>
    </head>
<body>

    <h1>Add a New Flight</h1>

    <form action="/flights" method="POST">
        <div>
            <label for="airline">Airline:</label>
          
            <select name="airline" id="airline" required>
                <option value="Delta">Delta Airlines (DL)</option>
                <option value="American">American Airlines (AA)</option>
                <option value="Southwest">Southwest Airlines (SW)</option>
                <option value="United">United Airlines (UA)</option>
            </select>
        </div><br>
        <div>
           <label for="airport">Airport:</label>
          <select name="airport">
             <option value="DEN">DEN</option>
             <option value="AUS">AUS</option>
             <option value="DFW">DFW</option>
             <option value="LAX">LAX</option>
             <option value="SAN">SAN</option>
        </select>
    </div>
        <br>
        <div>
            <label for="flightNo">Flight Number:</label>
            <input type="number" id="flightNo" name="flightNo" min="10" max="9999" required>
        </div><br>
        <div>
            <label for="departure">Departure Date/Time:</label>
            <input type="datetime-local" id="departure" name="departure" required>
        </div><br>
        
        <button type="submit">Add Flight</button>
    </form>
</body>
</html>
  