<head>
<%- include('../partials/header') %>
    <title>Flights App</title>
</head>
<body>
    <h1>List of Flights</h1>
    <ul>
        <% flights.forEach(flight => { %>
            <li>
               
                Airline: <%= flight.airline %><br><br>
                Airport: <%= flight.airport %><br><br>
                Flight No.: <%= flight.flightNo %><br><br>
                Departure: <%= flight.departure.toLocaleString() %><br><br>
                <a href="/flights/<%= flight._id %>">Details</a>
            </li><br>
        <% }) %>
    </ul><br><br><br><br>
</body>

<%- include('../partials/footer') %>